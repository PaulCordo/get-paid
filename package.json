{
  "name": "get-paid",
  "description": "Simple Electron application to manage Auto Entrepreneur invoices ",
  "author": {
    "name": "Paul Cordonnier",
    "email": "paul@paulcordonnier.com"
  },
  "version": "0.0.0",
  "private": true,
  "dependencies": {
    "bootstrap": "^5.1.3",
    "classnames": "^2.2.6",
    "date-fns": "^2.27.0",
    "electron-is-dev": "^1.2.0",
    "nedb": "^1.8.0",
    "node-sass": "4.14.1",
    "react": "^17.0.1",
    "react-bootstrap": "^2.0.3",
    "react-dom": "^17.0.1",
    "react-icons": "^4.1.0",
    "react-scripts": "4.0.1",
    "react-table": "^7.7.0"
  },
  "devDependencies": {
    "@babel/helper-builder-react-jsx": "^7.12.13",
    "concurrently": "^5.3.0",
    "electron": "^11.2.1",
    "electron-builder": "^22.9.1",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "prettier": "^2.2.1",
    "wait-on": "^5.2.1",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "concurrently \"react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "react-scripts build && electron-builder -c.extraMetadata.main=build/electron.js"
  },
  "homepage": "./",
  "main": "public/electron.js",
  "build": {
    "appId": "com.paulcordonnier.get-paid",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "icon": "./public/bill.png"
    },
    "linux": {
      "icon": "./public/bill.png",
      "category": "Office"
    }
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "es6": true,
      "browser": true
    },
    "plugins": [
      "react",
      "react-hooks"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:prettier/recommended",
      "prettier/react"
    ],
    "rules": {
      "react/display-name": "off",
      "prettier/prettier": "error",
      "react/prop-types": 0
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2021,
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "17.0"
      }
    },
    "globals": {
      "fetch": false,
      "console": false
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
