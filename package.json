{
  "name": "get-paid",
  "description": "Simple web application to manage invoices ",
  "author": {
    "name": "Paul Cordonnier",
    "email": "paul@paulcordonnier.com"
  },
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "@uiw/react-md-editor": "^3.20.2",
    "bootstrap": "^5.2.3",
    "classnames": "^2.3.2",
    "date-fns": "^2.29.3",
    "node-sass": "^7.0.1",
    "react": "^18.2.0",
    "react-bootstrap": "^2.7.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.0",
    "react-icons": "^4.7.1",
    "react-markdown": "^8.0.5",
    "react-scripts": "^5.0.1",
    "react-table": "^7.8.0",
    "rxdb": "^13.17.1",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "prettier": "^2.6.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build"
  },
  "homepage": "./",
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "es6": true,
      "browser": true
    },
    "plugins": [
      "react",
      "react-hooks"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "react/display-name": "off",
      "prettier/prettier": "error",
      "react/prop-types": 0,
      "no-unused-vars": "warn"
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2021,
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "18.1"
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
